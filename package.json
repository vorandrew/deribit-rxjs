{
  "name": "deribit-rxjs",
  "version": "2.2.4",
  "main": "lib/index.js",
  "license": "MIT",
  "scripts": {
    "pre-build": "rm -rf ./lib",
    "build": "babel -d lib src --minified --ignore '**/*.test.js'",
    "prepare": "yarn build && husky install",
    "lint": "eslint src",
    "test": "jest src --forceExit --silent -i -b",
    "tdd": "DEBUG=deribit-rxjs:*,-deribit-rxjs:ws jest src --watch -i",
    "dev": "DEBUG=deribit-rxjs:dev nodemon --exec babel-node src/dev.js"
  },
  "devDependencies": {
    "@babel/cli": "7.17.10",
    "@babel/core": "7.18.2",
    "@babel/node": "7.17.10",
    "@babel/preset-env": "7.18.2",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^28.1.0",
    "dotenv": "16.0.1",
    "eslint": "8.17.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-jest": "26.5.3",
    "eslint-plugin-prettier": "4.0.0",
    "husky": "^8.0.1",
    "jest": "^28.1.0",
    "nodemon": "^2.0.16",
    "prettier": "2.6.2",
    "typescript": "^4.7.3"
  },
  "dependencies": {
    "debug": "4.3.4",
    "lodash": "4.17.21",
    "rxjs": "7.5.5",
    "ws": "8.7.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint",
      "pre-push": "yarn test"
    }
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "jest/globals": true,
      "es2020": true,
      "node": true
    },
    "extends": [
      "prettier",
      "plugin:jest/recommended",
      "eslint:recommended"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module",
      "allowImportExportEverywhere": false,
      "codeFrame": false,
      "impliedStrict": true
    },
    "plugins": [
      "prettier",
      "jest"
    ],
    "rules": {
      "no-unused-vars": "error",
      "jest/no-disabled-tests": "warn",
      "jest/no-focused-tests": "error",
      "jest/no-identical-title": "error",
      "jest/prefer-to-have-length": "warn",
      "jest/valid-expect": "error",
      "prettier/prettier": [
        "error",
        {
          "arrowParens": "avoid",
          "semi": false,
          "singleQuote": true,
          "printWidth": 90,
          "tabWidth": 2
        }
      ]
    }
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "jest": {
    "roots": [
      "src"
    ],
    "testEnvironment": "node"
  },
  "description": "Deribit.com RxJS bindings",
  "repository": "git@github.com:santacruz123/deribit-rxjs.git",
  "author": "Andrey Vorobyov <vorandrew@gmail.com>"
}
